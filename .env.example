MONGODB_URL=mongodb://mongodb:27017
DATABASE_NAME=monitoring_poc
LOG_LEVEL=info

# AletheiaFact API
ALETHEIA_BASE_URL=http://localhost:3000

# Ory Cloud OAuth2 (Client Credentials Flow)
# Your Ory Cloud project URL - format: https://your-project-slug.projects.oryapis.com
ORY_CLOUD_URL=https://your-project-slug.projects.oryapis.com
ORY_CLIENT_ID=your_client_id_here
ORY_CLIENT_SECRET=your_client_secret_here
ORY_SCOPE=openid offline_access

# Recaptcha (optional - leave empty to skip validation in dev)
RECAPTCHA_TOKEN=

# Filtering and Submission Settings
MINIMUM_SAVE_SCORE=20  # Minimum score to save content to database (0-60)
SUBMISSION_SCORE_THRESHOLD=38  # Minimum score to submit to AletheiaFact (0-60) - increased from 35
AUTO_SUBMIT_ENABLED=false  # Set to 'true' to enable automatic submission to AletheiaFact after extraction
