MONGODB_URL=mongodb://mongodb:27017
DATABASE_NAME=monitoring_poc
LOG_LEVEL=info

# AletheiaFact API
ALETHEIA_BASE_URL=http://localhost:3000

# Ory Cloud OAuth2 (Client Credentials Flow)
# Your Ory Cloud project URL - format: https://your-project-slug.projects.oryapis.com
ORY_CLOUD_URL=https://your-project-slug.projects.oryapis.com
ORY_CLIENT_ID=your_client_id_here
ORY_CLIENT_SECRET=your_client_secret_here
ORY_SCOPE=read write

# Recaptcha (optional - leave empty to skip validation in dev)
RECAPTCHA_TOKEN=

# Scheduler Settings
EXTRACTION_INTERVAL_MINUTES=30  # How often to extract content from sources (in minutes)
SUBMISSION_INTERVAL_MINUTES=60  # How often to submit pending content to AletheiaFact (in minutes, only if AUTO_SUBMIT_ENABLED=true)

# Filtering and Submission Settings
MINIMUM_SAVE_SCORE=20  # Minimum score to save content to database (0-60)
SUBMISSION_SCORE_THRESHOLD=38  # Minimum score to submit to AletheiaFact (0-60)
AUTO_SUBMIT_ENABLED=false  # Set to 'true' to enable automatic scheduled submission to AletheiaFact
MAX_BATCH_SUBMISSION=100  # Maximum number of items to submit in a single batch
